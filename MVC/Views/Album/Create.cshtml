@model Nwd.BackOffice.Model.Album

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@if(ViewBag.AlbumCreated) {
    <div class="alert text-center alert-success">
        Album created!
    </div>
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Album</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="@Html.NameFor(model => model.Title)" />
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duration, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input value="00:00:00" placeholder="00:00:00" type="text" class="form-control" name="@Html.NameFor(model => model.Duration)" />
                @Html.ValidationMessageFor(model => model.Duration)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ReleaseDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" class="form-control" name="@Html.NameFor(model => model.ReleaseDate)" />
                @Html.ValidationMessageFor(model => model.ReleaseDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Type, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="@Html.NameFor(model => model.Type)" />
                @Html.ValidationMessageFor(model => model.Type)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CoverFile, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" class="form-control" name="@Html.NameFor(model => model.CoverFile)" />
            </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Artist.Name, "Artiste", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" class="form-control" name="@Html.NameFor(model => model.Artist.Name)" />
                @Html.ValidationMessageFor(model => model.Artist.Name)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "ListeAlbums")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
